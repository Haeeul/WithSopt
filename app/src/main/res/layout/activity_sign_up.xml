<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".feature.sign_up.SignUpActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/edtSignUpName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="@color/description"
        android:hint="이름"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/edtSignUpId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="@color/description"
        android:hint="아이디"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/edtSignUpName"
        app:layout_constraintStart_toStartOf="@+id/edtSignUpName"
        app:layout_constraintTop_toBottomOf="@+id/edtSignUpName" />

    <EditText
        android:id="@+id/edtSignUpPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="@color/description"
        android:hint="비밀번호"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/edtSignUpId"
        app:layout_constraintStart_toStartOf="@+id/edtSignUpId"
        app:layout_constraintTop_toBottomOf="@+id/edtSignUpId" />

    <EditText
        android:id="@+id/edtSignUpPwCk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="@color/description"
        android:hint="비밀번호확인"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/edtSignUpPw"
        app:layout_constraintStart_toStartOf="@+id/edtSignUpPw"
        app:layout_constraintTop_toBottomOf="@+id/edtSignUpPw" />

    <Button
        android:id="@+id/btnSignUpSubmmit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="회원가입완료"
        android:textColor="#ffffff"
        android:background="@drawable/red_round_background"
        app:layout_constraintEnd_toEndOf="@+id/edtSignUpPwCk"
        app:layout_constraintStart_toStartOf="@+id/edtSignUpPwCk"
        app:layout_constraintTop_toBottomOf="@+id/edtSignUpPwCk" />
</androidx.constraintlayout.widget.ConstraintLayout>